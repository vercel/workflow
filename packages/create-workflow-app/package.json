{
  "name": "create-workflow-app",
  "version": "0.0.1",
  "description": "Create a new Workflow app",
  "type": "module",
  "scripts": {
    "build": "tsc && chmod +x bin/run.js",
    "clean": "tsc --build --clean && rm -r dist ||:",
    "dev": "tsc --watch",
    "test": "vitest run src",
    "typecheck": "tsc --noEmit"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "catalog:",
    "@workflow/tsconfig": "workspace:*",
    "chalk": "^5.6.2",
    "ts-node": "^10.9.2"
  },
  "bin": "./bin/run.js",
  "oclif": {
    "bin": "create-workflow-app",
    "commands": {
      "strategy": "single",
      "target": "./dist/index.js"
    },
    "dirname": "create-workflow-app",
    "topicSeparator": " "
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "@oclif/core": "^4.5.1"
  }
}
