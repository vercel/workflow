{
  "name": "@workflow/world-postgres",
  "version": "4.1.0-beta.4",
  "description": "A reference World implementation based on PostgreSQL",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "workflow-postgres-setup": "./bin/setup.js"
  },
  "files": [
    "dist",
    "bin",
    "src/drizzle/migrations"
  ],
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vercel/workflow.git",
    "directory": "packages/world-postgres"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./schema": {
      "types": "./dist/drizzle/schema.d.ts",
      "default": "./dist/drizzle/schema.js"
    },
    "./cli": {
      "types": "./dist/cli.d.ts",
      "default": "./dist/cli.js"
    },
    "./migrations/*.sql": "./src/drizzle/migrations/*.sql"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "tsc --build --clean && rm -rf dist",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "db:push": "pnpm exec drizzle-kit --version && drizzle-kit push"
  },
  "dependencies": {
    "@vercel/queue": "0.0.0-alpha.23",
    "@workflow/errors": "workspace:*",
    "@workflow/world": "workspace:*",
    "@workflow/world-local": "workspace:*",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.31.2",
    "pg-boss": "^11.0.7",
    "postgres": "^3.4.7",
    "ulid": "^3.0.1",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@testcontainers/postgresql": "^11.7.1",
    "@types/node": "catalog:",
    "@workflow/errors": "workspace:*",
    "@workflow/tsconfig": "workspace:*",
    "@workflow/world-testing": "workspace:*",
    "drizzle-kit": "^0.22.7",
    "vitest": "catalog:"
  },
  "keywords": [],
  "author": "",
  "packageManager": "pnpm@10.15.1"
}
